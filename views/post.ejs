<!-- views/profile.ejs -->

<!DOCTYPE html>
<html>
<head>
	<title>Post Page</title>
</head>
<body>
	<hr>
	<!-- Display user's posts in reverse chronological order -->
	<% posts.forEach(function(post) { %>
		<h3><%= post.title %></h3>
		<p><%= post.content %></p>
		<p>Votes:<%= post.vote_counter %></p>
		<p>Created on <%= post.timestamp %></p>
		<p>By <%= user.username %></p>
		<hr>
	<% }); %>

</body>
</html>